        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBcCVa1BBGZDamToAUr7UIotPH9E1OsAWQ&v=beta&libraries=marker&callback=initMap"></script>
</head>

<body>
    <div class="top">
        <h1> Museum </h1>
        <p>전주에 있는 박물관 관련 지도 사이트 입니다.</p>
            <HR size="2" width="900" color="black" aligne="center">
    </div>

    <div class = "sch">
      <a href="/"> 홈 </a>
      <a href="/search"> 검색 </a>
      <a href="/mysite">현재위치</a>
      <a href="/ways">직선거리</a>
    </div>

    <div id="map"></div>

    <script type="text/javascript">

function initMap() {
  map = new google.maps.Map(document.getElementById("map"), {
    zoom: 14,
  });
  infoWindow = new google.maps.InfoWindow();


    // Try HTML5 geolocation.
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
        (position) => {
          const pos = {
            lat: position.coords.latitude,
            lng: position.coords.longitude,
          };

          infoWindow.setPosition(pos);
          infoWindow.setContent('<p class="mys">현제위치</p>'+ "<p class='myll'>위도: " + pos.lat + " 경도: " + pos.lng +'</p>');
          infoWindow.open(map);
          map.setCenter(pos);
        },
        () => {
          handleLocationError(true, infoWindow, map.getCenter());
        }
      );
    } else {
      // Browser doesn't support Geolocation
      handleLocationError(false, infoWindow, map.getCenter());
    }
  }
  function handleLocationError(browserHasGeolocation, infoWindow, pos) {
    infoWindow.setPosition(pos);
    infoWindow.setContent(
      browserHasGeolocation
        ? "Error: The Geolocation service failed."
        : "Error: Your browser doesn't support geolocation."
    );
    infoWindow.open(map);
  }

        initMap(); // 선언즉시 맵 생성

    </script>

</body>

</html>